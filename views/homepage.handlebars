<div>
  <div>

    {{#if loggedIn}}
      <form>
        <label for="subject">Write A Post!</label>
        <input type="text" id="sub" name="subject" />
        <br />
        <label for="body"></label>
        <textarea id="body" name="body" rows="10" cols="80"></textarea>
        <br />
        <button id="newPost"> Publish </button>
      </form>
    {{/if}}

  </div>
  <div class="container">
    <h2>
      Blogs
    </h2>
    {{#each posts as |post|}}
      <a href="/post/{{post.id}}">
        <div class="feed">
          <h3>
            {{post.post_sub}}
          </h3>
          <p>
            {{post.post_descr}}
            -
            {{post.username}}
            {{post.date_time}}
          </p>
        </div>
      </a>
    {{/each}}
  </div>
</div>