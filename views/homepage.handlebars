<div>
  <div>
    {{#if loggedIn}}
      <h2 class="writeanewblog">
        Create a New Blog!
        <button class="btn btn-primary" id="createblogbtn">create</button></h2>
      <form class="blogform" style="display: none">
        <label for="subject">Write A Post!</label>
        <br />
        <input type="text" id="sub" name="subject" />
        <br />
        <br />
        <label for="body"></label>
        <textarea id="body" name="body" rows="10" cols="80"></textarea>
        <br />
        <br />
        <button id="newPost" class="btn btn-primary"> Publish </button>
      </form>
    {{else}}
      <h2 class="writeanewblog">
        <a href="/login">Log in</a>
        to Create a Blog!
      </h2>
    {{/if}}
  </div>
  <div class="blogfeed">
    <h2>
      Blog Feed
    </h2>
    {{#each posts as |post|}}
      <a href="/post/{{post.id}}">
        <div class="row">
          <div class="feed col-10">
            <h3>
              {{post.post_sub}}
            </h3>
            <p>
              {{post.post_descr}}
              <br />
              <div class="sig">
                {{post.username}}
                -
                {{format_date post.date}}
              </div>
            </p>
          </div>
        </div>
      </a>
    {{/each}}
  </div>
</div>