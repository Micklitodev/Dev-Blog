<div class="blogfeed">
  <div class="row">
    <div class="feed col-10">
      <h3>
        {{sub}}
      </h3>
      <p>
        {{descr}}
        <br />
        <div class="sig">
          {{username}}
          - at
          {{format_time date}}
          on
          {{format_date date}}
        </div>
      </p>
    </div>
  </div>
  <div class="col-8">
    comments:
    {{#each comment as |comment|}}
      <div class="comment">
        {{comment.comment_body}}
        <br />
        <br />
        <div class="sig">
          {{comment.username}}
          - at
          {{format_time comment.date}}
          on
          {{format_date comment.date}}
        </div>
      </div>
      <br />
    {{/each}}
  </div>
  <div>
    <br />
    {{#if loggedIn}}
      <form>
        <label for="comment"></label>
        <textarea
          id="comment"
          name="comment"
          rows="10"
          class="col-9"
        ></textarea>
        <br />
        <button class="btn btn-dark" id="newComment"> Comment </button>
      </form>
    {{else}}
      <h2> <a href="/login">Log in</a> to leave a comment! </h2>
    {{/if}}
  </div>
</div>